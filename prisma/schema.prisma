generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  address String
  Post    Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  body     String
  author   User?  @relation(fields: [authorId], references: [id])
  authorId Int?
}
